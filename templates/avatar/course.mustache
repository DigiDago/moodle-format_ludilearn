<div class="course-avatar">
    <div class="row">
        <div class="col-12">
            <div class="{{#parameters.restricted }}restricted{{/parameters.restricted}} {{^url}} nourl {{/url}}">
                <div class="row">
                    {{#parameters.gamified}}
                    <div class="{{#parameters.lastaccess}}col-6{{/parameters.lastaccess}}
                        {{^parameters.lastaccess}}col-12{{/parameters.lastaccess}} block_section block_section_avatar">
                        {{#parameters.lastaccess}}

                            <div class="avatar-image"
                                 style="background-image: url({{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/backgrounds/background-1.svg)">
                                <img class="avatar-character" src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/avatar.svg" style="z-index:0;" alt="Image avatar">
                                {{#parameters.item-equiped-1 }}
                                    <img class="avatar-slot slot-1 item-equiped"
                                         src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/items/images/image-01-{{ parameters.item-equiped-1 }}.svg" alt="Image equiment 1">
                                {{/parameters.item-equiped-1 }}
                                {{^parameters.item-equiped-1 }}
                                    <img class="avatar-slot slot-1"
                                         src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/item_img_default.svg"  alt="Image equiment 1">
                                {{/parameters.item-equiped-1 }}
                                {{#parameters.item-equiped-2 }}
                                    <img class="avatar-slot slot-2 item-equiped"
                                         src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/items/images/image-02-{{ parameters.item-equiped-2 }}.svg" alt="Image equiment 2">
                                {{/parameters.item-equiped-2 }}
                                {{^parameters.item-equiped-2 }}
                                    <img class="avatar-slot slot-2"
                                         src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/item_img_default.svg"  alt="Image equiment 2">
                                {{/parameters.item-equiped-2 }}
                                {{#parameters.item-equiped-3 }}
                                    <img class="avatar-slot slot-3 item-equiped"
                                         src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/items/images/image-03-{{ parameters.item-equiped-3 }}.svg" alt="Image equiment 3">
                                {{/parameters.item-equiped-3 }}
                                {{^parameters.item-equiped-3 }}
                                    <img class="avatar-slot slot-3"
                                         src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/item_img_default.svg"  alt="Image equiment 3">
                                {{/parameters.item-equiped-3 }}
                                {{#parameters.item-equiped-4 }}
                                    <img class="avatar-slot slot-4 item-equiped"
                                         src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/items/images/image-04-{{ parameters.item-equiped-4 }}.svg" alt="Image equiment 4">
                                {{/parameters.item-equiped-4 }}
                                {{^parameters.item-equiped-4 }}
                                    <img class="avatar-slot slot-4"
                                         src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/item_img_default.svg"  alt="Image equiment 4">
                                {{/parameters.item-equiped-4 }}
                                {{#parameters.item-equiped-5 }}
                                    <img class="avatar-slot slot-5 item-equiped"
                                         src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/items/images/image-05-{{ parameters.item-equiped-5 }}.svg" alt="Image equiment 5">
                                {{/parameters.item-equiped-5 }}
                                {{^parameters.item-equiped-5 }}
                                    <img class="avatar-slot slot-5"
                                         src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/item_img_default.svg"  alt="Image equiment 5">
                                {{/parameters.item-equiped-5 }}
                                {{#parameters.item-equiped-6 }}
                                    <img class="avatar-slot slot-6 item-equiped"
                                         src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/items/images/image-06-{{ parameters.item-equiped-6 }}.svg" alt="Image equiment 6">
                                {{/parameters.item-equiped-6 }}
                                {{^parameters.item-equiped-6 }}
                                    <img class="avatar-slot slot-6"
                                         src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/avatar/item_img_default.svg"  alt="Image equiment 6">
                                {{/parameters.item-equiped-6 }}
                            </div>
                        {{/parameters.lastaccess}}
                        {{^parameters.lastaccess}}
                        <div class="col-12 block_section">
                            <img class="ludilearn-img img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/unkown.svg" alt="Image not viewed">
                        </div>
                        {{/parameters.lastaccess}}
                    </div>
                    {{/parameters.gamified}}
                    {{^parameters.gamified}}
                    <div class="col-12 block_section">
                        <img class="ludilearn-img img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/none.svg" alt="Image no gamified">
                    </div>
                    {{/parameters.gamified}}
                    {{#parameters.lastaccess}}
                        {{#parameters.gamified}}
                        <div class="col-6 block_section">
                            <div class="count-items">
                                <span class="numerator {{#parameters.itemsownedcounttwodigits}} two-digits {{/parameters.itemsownedcounttwodigits}}">
                                    {{ parameters.itemsownedcount }}
                                </span>
                                <span class="fraction">/</span>
                                <span class="denumerator">
                                    {{ parameters.itemsownablecount }}
                                    <span class="items-label">
                                        {{#str}} items, format_ludilearn {{/str}}
                                    </span>
                                </span>
                            </div>
                        </div>
                        {{/parameters.gamified}}
                    {{/parameters.lastaccess}}
                </div>
                <p class="text-center">
                    <span class="sectionname"><a href="{{ url }}" class="stretched-link">{{{ name }}}</a></span>
                </p>
                {{#parameters.restricted }}
                    <div class="sectionrestrictedinfo small text-center"><i class="fa fa-lock"></i> {{{ parameters.restrictedinfo }}}</div>
                {{/parameters.restricted }}
                {{^visible}}
                    <div class="section-hidden text-center">
                        <span class="badge badge-info">{{#str}} hiddenfromstudents {{/str}}</span>
                    </div>
                {{/visible}}
            </div>
        </div>
    </div>
</div>
