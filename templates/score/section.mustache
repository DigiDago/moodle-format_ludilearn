<div class="section-score">
    <div class="row">
        <div class="col-4 rightdottedscore">
            <h4 class="text-center">{{ name }}</h4>
            {{#parameters.gamified}}
                <img class="ludimoodle-img img-responsive mb-1 d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/score/chest.svg" alt="Image score chest">
                {{^parameters.noscore}}
                <p class="text-center scoretext">
                    <span class="playerscore">{{ parameters.score }}</span> / {{ parameters.maxscore }} pts
                </p>
                {{/parameters.noscore}}
            {{/parameters.gamified}}
            {{^parameters.gamified}}
                <img class="ludimoodle-img img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/none.svg" alt="Image not gamified">
            {{/parameters.gamified}}
            <div class="section-summary">
                {{{ summary }}}
            </div>
        </div>
        <div class="col-8">
            <div class="row">
                {{#cms}}
                    {{#label}}
                        <div class="col-12 mt-2">
                            <div class="cm-score">
                                {{{ labeltext }}}
                            </div>
                        </div>
                    {{/label}}
                    {{^label}}
                        <div class="col-6 col-sm-4 col-md-4 col-lg-4">
                            <div class="cm-score">
                                <a href="{{ url }}" class="{{#parameters.restricted }}restricted{{/parameters.restricted}} {{^url}} nourl {{/url}}">
                                    {{#parameters.gamified}}
                                        <img class="ludimoodle-img {{#parameters.restricted }}restricted{{/parameters.restricted }} img-responsive mb-1 d-block mx-auto"
                                             src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/score/bag.svg" alt="Image score chest">
                                        {{#parameters.bonuscompletion}}
                                            <div class="bonuscompletion">
                                                <span class="bonuscompletion-value">+ {{ parameters.bonuscompletion }}</span>
                                                <span class="bonuscompletion-str">{{#str}} settings:bonuscompletion, format_ludimoodle {{/str}}</span>
                                            </div>
                                        {{/parameters.bonuscompletion}}
                                    {{/parameters.gamified}}
                                    {{^parameters.gamified}}
                                        <img class="ludimoodle-img img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/none.svg" alt="Image not gamified">
                                    {{/parameters.gamified}}
                                    <p class="text-center scoretext">
                                        {{#parameters.gamified}}
                                            {{^parameters.noscore}}<span class="playerscore">{{ parameters.score }}</span> / {{ parameters.maxscore }} pts {{/parameters.noscore}}<br>
                                        {{/parameters.gamified}}
                                        <span class="cmname">{{ name }}</span>
                                    </p>
                                    {{#parameters.restricted }}
                                        <div class="cmrestrictedinfo text-center small"><i class="fa fa-lock"></i> {{{ parameters.restrictedinfo }}}</div>
                                    {{/parameters.restricted }}
                                </a>
                            </div>
                        </div>
                    {{/label}}
                {{/cms}}
            </div>
        </div>
    </div>
</div>