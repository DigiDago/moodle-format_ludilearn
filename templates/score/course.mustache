<div class="course-score">
    <div class="row">
        <div class="col-12">
            <a href="{{ url }}" class="{{#parameters.restricted }}restricted{{/parameters.restricted}} {{^url}} nourl {{/url}}">
                {{#parameters.lastaccess}}
                    {{#parameters.gamified}}
                        {{#parameters.noscore}}
                            <img class="ludimoodle-img img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/none.svg" alt="Image no score">
                        {{/parameters.noscore}}
                        {{^parameters.noscore}}
                            <img class="ludimoodle-img img-responsive mb-1 d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/score/chest.svg" alt="Image score chest">
                        {{/parameters.noscore}}
                    {{/parameters.gamified}}
                    {{^parameters.gamified}}
                        <img class="ludimoodle-img img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/none.svg" alt="Image not gamified">
                    {{/parameters.gamified}}
                {{/parameters.lastaccess}}
                {{^parameters.lastaccess}}
                    <img class="ludimoodle-img img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/unkown.svg" alt="Image no score">
                {{/parameters.lastaccess}}
                <p class="text-center scoretext">
                    {{#parameters.lastaccess}}
                        {{^parameters.noscore}}
                            <span class="playerscore">{{ parameters.score }}</span> / {{ parameters.maxscore }} pts
                        {{/parameters.noscore}}
                    {{/parameters.lastaccess}}
                    <br>
                    <span class="sectionname">{{ name }}</span>
                </p>
                {{#parameters.restricted }}
                    <div class="sectionrestrictedinfo small text-center"><i class="fa fa-lock"></i> {{{ parameters.restrictedinfo }}}</div>
                {{/parameters.restricted }}
                {{^visible}}
                    <div class="section-hidden text-center">
                        <span class="badge badge-info">{{#str}} hiddenfromstudents {{/str}}</span>
                    </div>
                {{/visible}}
            </a>
        </div>
    </div>
</div>