<div class="course-timer">
    <div class="row">
        <div class="col-12">
            <a href="{{ url }}" class="{{#parameters.restricted }}restricted{{/parameters.restricted}} {{^url}} nourl {{/url}}">
                {{#parameters.lastaccess}}
                    {{#parameters.gamified}}
                    <img class="ludimoodle-img img-responsive d-block mx-auto"
                         src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/timer/default-timer.svg"
                         alt="Image best reference time">
                        <div class="progression-text">
                            <p class="text-center">
                                <span class="progression">{{ parameters.besttime }}</span>
                            </p>
                        </div>
                    {{/parameters.gamified}}
                    {{^parameters.gamified}}
                        <img class="ludimoodle-img img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/none.svg" alt="Image not gamified">
                    {{/parameters.gamified}}
                {{/parameters.lastaccess}}
                {{^parameters.lastaccess}}
                    <img class="ludimoodle-img img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/unkown.svg" alt="Image not viewed">
                {{/parameters.lastaccess}}
                <p class="text-center">
                    <span class="sectionname">{{ name }}</span>
                </p>
                {{#parameters.restricted }}
                    <div class="sectionrestrictedinfo small text-center"><i class="fa fa-lock"></i> {{{ parameters.restrictedinfo }}}</div>
                {{/parameters.restricted }}
                {{^visible}}
                    <div class="section-hidden text-center">
                        <span class="badge badge-info">{{#str}} hiddenfromstudents {{/str}}</span>
                    </div>
                {{/visible}}
            </a>
        </div>
    </div>
</div>
