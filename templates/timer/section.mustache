{{!
    @template format_ludilearn/filename

    Example context (json):
    {}
}}

<div class="section-timer">
    <div class="row">
        <div class="col-4 rightdottedscore">
        {{#parameters.gamified}}
            <h4 class="text-center">{{ name }}</h4>
            <img class="img-responsive d-block mx-auto"
                 src="{{config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/timer/default-timer.svg"
                 alt="Image best reference time">
            <p class="text-center">
                {{#str}} averagetime, format_ludilearn {{/str}}
            </p>
            <div class="progression-text">
                <p class="text-center">
                    <span class="progression">{{ parameters.averagetime }}</span>
                </p>
            </div>
        {{/parameters.gamified}}
        {{^parameters.gamified}}
            <img class="ludilearn-img img-responsive d-block mx-auto" src="{{config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/none.svg" alt="Image not gamified">
        {{/parameters.gamified}}
            <div class="section-summary">
                {{{ summary }}}
            </div>
        </div>
        <div class="col-8">
            <div class="row">
                {{#cms}}
                    {{#label}}
                        <div class="col-12 mt-2">
                            <div class="cm-score">
                                {{{ labeltext }}}
                            </div>
                        </div>
                    {{/label}}
                    {{^label}}
                        <div class="col-6 col-sm-4 col-md-4 col-lg-4">
                            <div class="cm-timer">
                                <div class="{{#parameters.restricted }}restricted{{/parameters.restricted}} {{^url}} nourl {{/url}}">
                                    {{#parameters.gamified}}
                                        <img class="img-responsive d-block mx-auto"
                                             src="{{config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/timer/icon.svg"
                                             alt="Image activity timer">
                                        {{#parameters.bestpenaltiescalc}}
                                            <div class="penalties">
                                                <span class="penalties-value">+ {{ parameters.bestpenaltiescalc }}s </span>
                                                <span class="penalties-str">{{#str}} ofpenalties, format_ludilearn {{/str}}</span>
                                            </div>
                                        {{/parameters.bestpenaltiescalc}}
                                    {{/parameters.gamified}}
                                    {{^parameters.gamified}}
                                        <img class="img-responsive d-block mx-auto" src="{{config.wwwroot}}/course/format/ludilearn/pix/{{ world }}/none.svg" alt="Image not gamified">
                                    {{/parameters.gamified}}
                                    <div class="progression-text progression-cm">
                                        <p class="text-center">
                                            <span class="progression">{{ parameters.besttime }}</span>
                                        </p>
                                    </div>
                                    <p class="text-center scoretext">
                                        <span class="cmname"><a href="{{ url }}" class="stretched-link">{{{ name }}}</a></span>
                                    </p>
                                    {{#parameters.restricted }}
                                        <div class="cmrestrictedinfo text-center small"><i class="fa fa-lock"></i> {{{ parameters.restrictedinfo }}}</div>
                                    {{/parameters.restricted }}
                                </div>
                            </div>
                        </div>
                    {{/label}}
                {{/cms}}
            </div>
        </div>
    </div>
</div>
