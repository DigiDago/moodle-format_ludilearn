<div class="cm-timer {{#cm.parameters.restricted }}restricted{{/cm.parameters.restricted }}">
{{#parameters.gamified }}
    <div class="row">
        <div class="col-12">
            <img class="img-responsive d-block mx-auto"
                 src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/timer/default-timer.svg"
                 alt="Image reference time">
            {{#parameters.currenttime }}
            {{#parameters.currentpenaltiescalc}}
            <div class="penalties penalties-cm">
                <span class="penalties-value">+ {{ parameters.currentpenaltiescalc }}s </span>
                <span class="penalties-str">{{#str}} ofpenalties, format_ludimoodle {{/str}}</span>
            </div>
            {{/parameters.currentpenaltiescalc}}
            {{/parameters.currenttime }}
        </div>
    </div>
    <div class="row">
        {{#parameters.currenttime }}
        <div class="col-6 rightdottedscore">
            <div class="chrono text-center progression-text progression-cm">
                <img src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/timer/chrono.svg" alt="Icone chrono">
                <span class="current-time">
                    {{ parameters.currenttime }}
                </span>
            </div>
        </div>
        {{/parameters.currenttime }}
        <div class="{{#parameters.currenttime }}col-6{{/parameters.currenttime }} {{^parameters.currenttime }}col-12{{/parameters.currenttime }}">
            <div class="reference-time text-center progression-text progression-cm">
                <span>{{#str}} besttime, format_ludimoodle {{/str}}</span>
                <img src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/timer/reftime.svg" alt="Icon besttime">
                <span>{{ parameters.besttime }}</span>
            </div>
        </div>
    </div>

{{/parameters.gamified }}
{{^parameters.gamified }}
    <img class="img-responsive d-block mx-auto" src="{{globals.config.wwwroot}}/course/format/ludimoodle/pix/{{ world }}/none.svg" alt="Image not gamified">
{{/parameters.gamified }}
</div>
