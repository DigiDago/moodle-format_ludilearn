{{!
    @template format_ludimoodle/report
    Evaluation selector.
    The purpose of this template is to render the programs.

    Example context (json):
    {}
}}
<div id="ludimoodle-report" class="container">
    <div class="row">
        <div class="col-6">
            <form id="formSearchReport" action="#">
                <label for="inputSearchReport" class="label-grey-uppercase">{{#str}} search, core {{/str}}</label>
                <div class="input-group">
                    <input type="text" id="inputSearchReport" class="form-control input-search" placeholder="{{#str}} search, core {{/str}}">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary search-icon">
                            <i class="icon fa fa-search fa-fw " aria-hidden="true"></i>
                            <span class="sr-only">{{#str}} search, core {{/str}}</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <table id="tableReport" class="table">
                    <thead id="theadReport">
                    <tr>
                        <!--
                        <th scope="col">{{#str}} firstname, core {{/str}}</th>
                        <th scope="col">{{#str}} lastname, core {{/str}}</th>-->
                        <th scope="col">{{#str}} username, core {{/str}}</th>
                        <th scope="col">{{#str}} gameelement, format_ludimoodle {{/str}}</th>
                        <th scope="col">{{#str}} progression, format_ludimoodle {{/str}}</th>
                        <th scope="col">{{#str}} lastaccess, core {{/str}}</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-12">
            <nav id="pagination" aria-label="Pagination">
            </nav>
        </div>
    </div>
</div>